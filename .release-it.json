{
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        },
        "@release-it/bumper": {
            "out": [
                "metadata.json",
                "version.lua"
            ]
        }
    },
    "hooks": {
        "before:init": "npm test",
        "after:bump": "echo 'Mise à jour des fichiers Lua si nécessaire...'"
    }
}